actor SLZSpatter
{
    Radius 8
    Height 6
    Speed 15
    Damage (random(12,18))
    Scale 0.25
    Alpha 0.75
    PROJECTILE
    -BLOODSPLATTER
	+BLOODLESSIMPACT
    +NOBLOOD
    RenderStyle Add
    DamageType "Zorch"
    States
    {
      Spawn:
        SLZR CDEFCDEF 1 BRIGHT
        goto SpawnDeath

      Death:
        CMIS BCD 5 BRIGHT
        Stop

      SpawnDeath:
        SLZR CDEF 1 A_FadeOut(0.25)
        stop
    }
}

