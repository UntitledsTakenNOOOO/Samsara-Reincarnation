	Scale 1.25
	+FORCERADIUSDMG
	States
	{
	Spawn:
		DMSL E -1 Bright Light("POWERHOMROCKET")
		stop

	Death:
		TNT1 A 0 A_SetTranslucent(0.67,1)
		TNT1 A 0 A_Explode(80,240,0)
