Script "RoTT453" enter
{
	int rechargeTimer;
	While(CheckInventory("RottClass"))
	{
		if(rechargeTimer >= 30)
		{
			GiveInventory("BMissiles",1);
			GiveInventory("DSEnergy",1);
			rechargeTimer = 0;
		}
		else
			rechargeTimer++;
			
		Delay(35);
	}
}

