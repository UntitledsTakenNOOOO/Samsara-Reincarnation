		TNT1 A 0 A_GunFlash("FlashStr",GFF_NOEXTCHANGE)
		DPLS N 1 Bright A_GiveInventory("SamsaraDoomguyStrPlasmaRifleAttackHandler")
		TNT1 A 0 A_JumpIfInventory("SamsaraHasDoubleFiringSpeed",1,2)
