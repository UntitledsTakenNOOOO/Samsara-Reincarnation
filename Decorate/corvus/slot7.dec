		CORV F 6 BRIGHT A_CustomBulletAttack(3.6, 0, 1, random(17,30), "BlasterPuff2", 0, CBAF_NORANDOM|CBAF_AIMFACING)
		CORV E 0 A_PlayWeaponSound("heretic/dragonclaw")
		CORV F 6 BRIGHT A_CustomBulletAttack(3.6, 0, 1, random(17,30), "BlasterPuff2", 0, CBAF_NORANDOM|CBAF_AIMFACING)
		CORV E 6
