	  else
	  if (eyey <= 192.0) { SetFont("GEYE3"); }
	  else
	  if (eyey <= 240.0) { SetFont("GEYE1"); }
	  else
	  if (eyey <= 320.0) { SetFont("GEYE2"); }
	  else SetFont("GEYE3");
	  HudMessage(s:"A";HUDMSG_FADEOUT,rottstartid+11900,0,eyex,(eyey),0.05,0.5);
	  delay(1);
  }
	eyey = 0.1;
}

