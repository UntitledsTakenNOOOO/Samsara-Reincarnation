Script "RottGasMask" (void)
{
	if(CheckInventory("RottGasMask") != 0)
	{
		GiveInventory("RottGasMaskDuplicateToken", 1);
		terminate;
	}
		
	GiveInventory("RottGasMask", 1);
	sethudsize(214,200,0);
	setfont("P_GMASK");
	HudMessage(s:"A";0,rottstartid+15700,0,107.0,100.0,70.0);
	for(int a = 0; a < 46; a++)
	{
		if(CheckInventory("RottGasMaskDuplicateToken") != 0)
			TakeInventory("RottGasMaskDuplicateToken", 1);

		HudMessage(s:"A";HUDMSG_LAYER_UNDERHUD|HUDMSG_NOTWITHFULLMAP,rottstartid+15700,0,107.0,100.0,70.0);
		if(a % 3 == 0)
		{
			LocalAmbientSound("gen/gasmask", 127);
		}
		Delay(35);
		
		If(GetActorProperty(0, APROP_Health) <= 0)
		{
			break;
		}
	}
	SetHudSize(0,0,0);
	SetFont("");
	HudMessage(s:"";0,rottstartid+15700,0,107.0,100.0,0);
	TakeInventory("RottGasMask", 1);
}
Script "RottDogModeHandler" (void)
{
	int oldtid = ActivatorTid();
	int usertid = UniqueTid(0);
	int dummytid = UniqueTid(0);
	
	SpawnSpotForced("TranslationDummy",0,dummytid,0);
	Thing_SetTranslation(dummytid, -1);
	
	Delay(1);
	
	GiveInventory("DogMode", 1);
	
	Thing_ChangeTid(0, usertid);
	SetActivator(dummytid, AAPTR_Default);
	Thing_SetTranslation(usertid, -1);
	SetActivator(usertid, AAPTR_Default);
	Thing_ChangeTid(usertid, oldtid);
	SetResultValue(1);
}
