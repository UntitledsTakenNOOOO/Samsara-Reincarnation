Actor RTCW_BloodTrail
{
	Height 4
	Radius 2
	Renderstyle Translucent
	+NOINTERACTION
	States
	{
		Spawn:
			RW00 ABCDEFGHIJ 1
			Stop
	}
}

Actor RTCW_Gib
{
	Height 2
	Radius 2
	Speed 2
	Gravity 0.5
	Damage (0)
	Projectile
	BounceType "Doom"
	Bouncecount 2
	Bouncesound ""
	-NOGRAVITY
	+BLOODLESSIMPACT
	+THRUACTORS
	+MOVEWITHSECTOR
	States
	{
		Spawn:
			RW00 A 0 NoDelay A_SpawnItemEx("RTCW_BloodCloud",0,0,0,0,0,0,0,SXF_TRANSFERTRANSLATION)
			RW00 A 0 A_SpawnItemEx("RTCW_BloodTrail",0,0,frandom(-0.5,0.5),frandom(-0.5,0.5),frandom(0.05,0.25),0,SXF_NOCHECKPOSITION|SXF_USEBLOODCOLOR|SXF_ABSOLUTEVELOCITY)
		SpawnLoop:
			RW00 A 2
			Loop
		Death:
			RW00 A 100
			TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraDecorate",31) == 1, "Death")
			RW00 AAAAAAAA 1 A_Fadeout(0.1)
			Stop
	}
}

