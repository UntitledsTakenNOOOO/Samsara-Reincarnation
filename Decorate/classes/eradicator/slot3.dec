}

Actor EradDeathBomb 
{
	Speed 16
	Radius 6
	Height 6
	Damage (50)
	Projectile
	Damagetype "EradExplosive2"
	-NOGRAVITY
	+NOTELEPORT
	+MOVEWITHSECTOR
	+BOUNCEONFLOORS
	+BOUNCEONCEILINGS
	+BOUNCEONWALLS
	+CANBOUNCEWATER
	+FORCERADIUSDMG
	BounceCount 5
	BounceFactor 0.15
	ReactionTime 17
	Scale 0.5
	Gravity 0.25
	States 
	{
		Spawn:
			TNT1 A 0
			TNT1 A 0 ThrustThingZ(0,Random(3,6)+Random(0,3),0,1)
			ER74 KLMNOPQ 3 bright A_SpawnItemEx("EradSmokeTrail",0,0,0,0,0,1,1,SXF_NOCHECKPOSITION)
		SpawnSmoke:
			ER74 KLMNOPQKLMNOPQKLMNOPQKLM 3 Bright A_SpawnItemEx("EradSmokeTrail",0,0,0,0,0,1,1,SXF_NOCHECKPOSITION)
			TNT1 A 0 A_CountDown
		SpawnLoop:
			ER74 NOPQKLM 3 bright
			TNT1 A 0 A_CountDown		
			Loop
		Death:
		XDeath:
			TNT1 A 0 A_NoGravity
			TNT1 A 0 A_Explode(100,100)
			TNT1 A 0 A_PlaySound("EradMissile/Boom",CHAN_VOICE)
			TNT1 A 0 A_SpawnITemEx("EradPlasmaExplosion1",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION)
			TNT1 A 5 A_FadeOut
			Stop
	}
}

