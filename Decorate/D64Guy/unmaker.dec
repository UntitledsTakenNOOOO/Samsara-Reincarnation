      SelectPR:
        TNT1 A 0 A_SelectWeapon(" Plasma Rifle ")
        goto Ready
      SelectSSG:
        TNT1 A 0 A_SelectWeapon(" Super Shotgun ")
        goto Ready
      SelectCG:
        TNT1 A 0 A_SelectWeapon("   Chaingun   ")
        goto Ready
      SelectSG:
