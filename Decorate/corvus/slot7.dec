		CORV E 10
		CORV E 0 A_TakeInventory("CorvusShootCloneTrigger",1,0,AAPTR_Master)
		Goto See
	MissileUseHellstaff:
		CORV FFFFFF 4 BRIGHT A_CustomMissile("HellstaffShot",32,0,angle,CMF_AIMDIRECTION|CMF_ABSOLUTEANGLE,pitch)
		CORV E 4
		CORV E 0 A_TakeInventory("CorvusShootCloneTrigger",1,0,AAPTR_Master)
		Goto See
