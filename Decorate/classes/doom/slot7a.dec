	DeathSound "doomguy/plasmax"
	Obituary "$SAMSARA_DOOMGUY_OB_SLOT7_LOADOUT1"
	DamageType "DoomDamageTypeBFG"
	-BLOODSPLATTER
	States
	{
	Spawn:
		DBXB AB 6 bright
