        TNT1 A 0 A_PlaySound("Erad/wepswitch")
      DeselectLoop:
        TNT1 A 0 A_Lower
        ER08 A 1 A_Lower
        loop

      Select:
        TNT1 A 0 A_Raise
        ER08 A 1 A_Raise
        loop

      Fire:
        TNT1 A 0 A_GunFlash
        ER08 A 2 Bright A_GiveInventory("SamsaraEradicatorIonSpherePrimaryAttackHandler")
        ER08 A 1 Offset(0,39)
        ER08 A 1 Offset(0,45)
        ER08 A 1 Offset(0,59)
        ER08 A 1 Offset(0,55)
        ER08 A 1 Offset(0,52)
        ER08 A 2 Offset(0,49)
        ER08 A 2 Offset(0,46)
        ER08 A 2 Offset(0,44)
        ER08 A 2 Offset(0,40)
        ER08 A 2 Offset(0,38)
        ER08 A 2 Offset(0,36)
        ER08 A 2 Offset(0,34)
        ER08 A 9 Offset(0,32)
        ER08 A 3 A_ReFire
        goto Ready

      AltFire:
        TNT1 A 0 A_GunFlash
        ER08 A 2 Bright A_GiveInventory("SamsaraEradicatorIonSphereSecondaryAttackHandler")
        ER08 A 1 Offset(0,39)
        ER08 A 1 Offset(0,45)
        ER08 A 1 Offset(0,59)
        ER08 A 1 Offset(0,55)
        ER08 A 1 Offset(0,52)
        ER08 A 2 Offset(0,49)
        ER08 A 2 Offset(0,46)
        ER08 A 2 Offset(0,44)
        ER08 A 2 Offset(0,40)
        ER08 A 2 Offset(0,38)
        ER08 A 2 Offset(0,36)
        ER08 A 2 Offset(0,34)
        ER08 A 9 Offset(0,32)
        ER08 A 3 A_ReFire
        goto Ready

      Flash:
        ER08 B 2 Bright Offset(0,32)
		ER08 C 1 Bright Offset(0,39)
		ER08 C 1 Bright Offset(0,45)
        goto LightDone

      IntroTaunt:
        TNT1 A 0 A_GiveInventory("EleenaIntroTaunt")
        goto ReadyStart
    }
}

actor SamsaraEradicatorIonSpherePrimaryAttackHandler : Trigger
{
    States
    {
      // Ammo checking/taking stuff
      Pickup:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"PickupAttack")
        TNT1 A 0 A_JumpIfInventory("Cell",6,1)
        stop
        TNT1 A 0 A_TakeInventory("Cell",6)
        goto PickupAttack

      // Attack stuff
      PickupAttack:
        TNT1 A 0 A_PlaySound("GrenadeB/FireB",CHAN_WEAPON)
        TNT1 A 0 A_JumpIfInventory("SPModeOn",1,"PickupAttackCoop")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"PickupAttackCoop")
