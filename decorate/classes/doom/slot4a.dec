// Machine Gun

actor " Machine Gun " : Weapon
{
	Weapon.SelectionOrder 700
	Weapon.AmmoUse 1
	Weapon.AmmoGive 0
	Weapon.AmmoType "Clip"
	Weapon.SlotNumber 4
	Tag "Machine Gun"
	Inventory.PickupMessage "You got the Machine Gun!"
	+UNDROPPABLE
	Obituary "$SAMSARA_DOOMGUY_OB_SLOT4"
	Inventory.RestrictedTo "DoomguyPlayer"
	States
	{
	Spawn:
		DMCG Z -1
		stop

	Ready:
		DMCG A 1 A_WeaponReady
		loop

	Deselect:
		DMCG A 1 A_Lower
		loop

	Select:
		DMCG A 1 A_Raise
		loop

	Fire:
		TNT1 A 0 A_GunFlash
		DMCG A 4 Bright A_GiveInventory("SamsaraDoomguyMachineGunAttackHandler")
		TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,2)
		TNT1 A 0 A_JumpIfInventory("Clip",1,1)
		goto Fire2
        TNT1 A 0 A_GunFlash
        goto Fire2

	Fire2:
		DMCG A 4 Bright A_GiveInventory("SamsaraDoomguyMachineGunAttackHandler")
		TNT1 A 0 A_ReFire
		goto Ready

	Flash:
		DMCG B 2 Bright A_Light1
		DMCG C 2 Bright A_Light1
		goto LightDone
	}
}

