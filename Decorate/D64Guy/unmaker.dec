        64UN A 2
        64UN A 0 A_GiveInventory("Doom64UnmakerRefireCount", 1)
        64UN A 0 A_JumpIfInventory("Cell",3,1)
        goto Nothing
        64UN A 0 A_Refire
        Goto Ready
		
      Hold2:
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"Hold2Coop")
