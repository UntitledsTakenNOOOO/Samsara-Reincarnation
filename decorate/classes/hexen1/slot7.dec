    Obituary "$SAMSARA_HEXEN_OB_SLOT7"
    Tag "Bloodscourge"
    +BFG
    +PRIMARY_USES_BOTH
    States
    {
      Spawn:
        H105 A -1 Bright
        stop

      Ready:
        TNT1 A 0 A_TakeInventory("SamsaraHexenWeaponPaletteBlendCounter")
        MSTF AAAAAABBBBBBCCCCCCDDDDDDEEEEEEFFFFF 1 A_WeaponReady
        loop

      Deselect:
