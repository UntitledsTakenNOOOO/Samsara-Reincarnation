        TNT1 A 18
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"FireRangedFinishAmmo")
        TNT1 A 0 A_JumpIfInventory("Clip",3,"FireRangedFinishAmmo")
