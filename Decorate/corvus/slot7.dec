		CORV E 0 A_PlayWeaponSound("heretic/wand")
		CORV F 3 BRIGHT A_CustomBulletAttack(5.625, 0, 1, random(1,8)+6, "GoldWandPuff3", 0, CBAF_NORANDOM|CBAF_AIMFACING)
		CORV E 6
		CORV E 0 A_PlayWeaponSound("heretic/wand")
		CORV F 3 BRIGHT A_CustomBulletAttack(5.625, 0, 1, random(1,8)+6, "GoldWandPuff3", 0, CBAF_NORANDOM|CBAF_AIMFACING)
