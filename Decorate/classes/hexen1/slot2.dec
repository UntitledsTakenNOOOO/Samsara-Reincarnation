        H101 A 3 Offset(0,92)
        H101 A 3 Offset(0,72)
        H101 A 3 Offset(0,52)
        goto Ready

      FireRangedFinishAmmo:
        H101 B 3 Bright Offset(0,92)
        H101 B 3 Bright Offset(0,72)
        H101 B 3 Bright Offset(0,52)
