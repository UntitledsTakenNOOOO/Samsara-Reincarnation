actor "Taser" : InstantSwitchWeapon
{
    Weapon.SelectionOrder 4500
    Weapon.SlotNumber 1
    Weapon.SlotPriority 0	
	Weapon.BobStyle InverseAlpha
	Weapon.BobRangeX 0.2
	Weapon.BobRangeY 0.2
	Weapon.BobSpeed 4.0
    Inventory.PickUpSound "wolfen/knifeget"
    Obituary "%k tazed %o with lethal force."
    Inventory.PickupMessage "You got the Taser! Wait, you should have one of these!"
    DamageType "Pistol"
    Weapon.AmmoUse 0
    Weapon.AmmoGive 0
	Weapon.AmmoType2 "C7ProxyMineAmmo"
	Weapon.AmmoUse2 1
	Weapon.AmmoGive2 0
    +WEAPON.WIMPY_WEAPON
	+WEAPON.ALT_AMMO_OPTIONAL
    +INVENTORY.UNDROPPABLE
	+WEAPON.NOALERT
    Weapon.YAdjust 11
	Inventory.RestrictedTo "Corridor7Player"		
    States
    {
      Spawn:
        7PS2 A -1
        Loop

      Ready:
        TNT1 A 0 SetPlayerProperty(0,1,2)
        C7PS OPQRSTU 2 A_WeaponReady
        goto Ready2
		
	  Ready2:
	    C7PS ABCDEFG 2 A_WeaponReady
		Loop

      Fire:
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopFire")
        C7PS H 3
        C7PS I 1 A_PlayWeaponSound("C7/Taser")
		C7PS I 0 BRIGHT A_FireBullets(0,0,1,random(6,20),"BlankPuff2Bloodless", FBF_NORANDOM, 64)
		C7PS I 0 BRIGHT A_FireBullets(0,0,1,random(3,10),"BlankPuff2Bloodless", FBF_NORANDOM, 256)
        C7PS I 2 BRIGHT A_FireBullets(0,0,1,random(7,20),"BlankPuff2", FBF_NORANDOM)
        C7PS JKLMN 2
        Goto Ready

      CoopFire:
        C7PS H 3
        C7PS I 1 A_PlayWeaponSound("C7/Taser")
		C7PS I 0 BRIGHT A_FireBullets(0,0,1,random(6,20),"BlankPuff2BloodlessCoop", FBF_NORANDOM, 64)
		C7PS I 0 BRIGHT A_FireBullets(0,0,1,random(3,10),"BlankPuff2BloodlessCoop", FBF_NORANDOM, 256)
        C7PS I 2 BRIGHT A_FireBullets(0,0,1,random(7,20),"BlankPuff2Coop", FBF_NORANDOM)
        C7PS JKLMN 2
        Goto Ready
		
	  AltFire: 
        TNT1 A 0 A_JumpIfInventory("DMModeOn",1,"AltDMFire")	  		
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"AltCoopFire")		
		C7PS O 0 A_JumpIfNoAmmo("Ready")
		C7PS O 5 A_SpawnItemEx("C7ProxyMine",0,0,0,0,0,0,0,SXF_SETMASTER)
		C7PS O 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7PS O 5 A_Print("Mine placed")
		Goto Ready
		
      AltCoopFire:	
		C7PS O 0 A_JumpIfNoAmmo("Ready")
		C7PS O 5 A_SpawnItemEx("C7CoopProxyMine",0,0,0,0,0,0,0,SXF_SETMASTER)
		C7PS O 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7PS O 5 A_Print("Mine placed")
		Goto Ready	
		
	  AltDMFire:
		C7PS O 0 A_JumpIfNoAmmo("Ready")
		C7PS O 5 A_SpawnItemEx("C7ProxyMineDM",0,0,0,0,0,0,0,SXF_SETMASTER)
		C7PS O 5 A_TakeInventory("C7ProxyMineAmmo", 1)
		C7PS O 5 A_Print("Mine placed")
		Goto Ready	  
    }
}

actor C7TaserBullet : FastProjectile
{
    Damage (Random(10,32))
    Radius 1
    Height 1
    Speed 350
    Projectile
    Renderstyle "Normal"
    Species "Player"
    DamageType "Pistol"
    +BLOODSPLATTER
    +THRUSPECIES
    +NOTIMEFREEZE
	+NODAMAGETHRUST
    Alpha 1.0
    States
    {
      Spawn:
        TNT1 A 1
        loop

      Death:
        TNT1 A 1
        stop
    }
}