        64UN A 0 A_FireCustomMissile("Doom64UnmakerLaser2")
        64UN A 0 A_FireCustomMissile("Doom64UnmakerLaser2Silent", -4.5)
        64UN A 0 A_FireCustomMissile("Doom64UnmakerLaser2Silent", 4.5)
