//Belongs to Eleena
actor "Eleena Smoke Bomb" : SamsaraEradicatorWeapon
{
    Inventory.PickupMessage "Smokebomb"
    Weapon.SlotNumber 6
    Weapon.SelectionOrder 1350
    Weapon.AmmoType1 "Cell"
    Weapon.AmmoType2 "Cell"
    //Weapon.AmmoGive 48
    Weapon.AmmoUse1 6
    Weapon.AmmoUse2 12
    Obituary "%o was suffocated by %k's smokebomb."
    Tag "Smoke Bomb"
    +NOAUTOAIM
    States
    {
      Spawn:
        ER07 B -1
        stop

      Ready:
        TNT1 A 0 A_JumpIfInventory("EleenaReady",1,"IntroTaunt")
      ReadyStart:
        TNT1 A 0 A_JumpIfInventory("PowerEradEnWP",1,3)
        TNT1 A 0 A_JumpIfInventory("SamsaraHasPermaWeaponLevel2",1,2)
        ER07 A 1 A_WeaponReady(WRF_NOSECONDARY)
        goto Ready
        ER07 A 1 A_WeaponReady
        goto Ready

      Deselect:
        TNT1 A 0 A_JumpIfHealthLower(1,"DeselectInstant")
        TNT1 A 0 A_PlaySound("Erad/wepswitch")
      DeselectLoop:
        TNT1 A 0 A_Lower
        ER07 A 1 A_Lower
        loop

      Select:
        TNT1 A 0 A_Raise
        ER07 A 1 A_Raise
        loop

      Fire:
        TNT1 A 0 A_GunFlash
        ER07 A 2 Bright A_GiveInventory("SamsaraEradicatorSmokeBombPrimaryAttackHandler")
        ER07 A 1 Offset(0,39)
        ER07 A 1 Offset(0,45)
        ER07 A 1 Offset(0,59)
        ER07 A 1 Offset(0,55)
        ER07 A 1 Offset(0,52)
        ER07 A 2 Offset(0,49)
        ER07 A 2 Offset(0,46)
        ER07 A 2 Offset(0,44)
        ER07 A 2 Offset(0,40)
        ER07 A 2 Offset(0,38)
        ER07 A 2 Offset(0,36)
        ER07 A 2 Offset(0,34)
        ER07 A 9 Offset(0,32)
        ER07 A 3 A_ReFire
        goto Ready

      AltFire:
        TNT1 A 0 A_GunFlash
        ER07 A 2 Bright A_GiveInventory("SamsaraEradicatorSmokeBombSecondaryAttackHandler")
        ER07 A 1 Offset(0,39)
        ER07 A 1 Offset(0,45)
        ER07 A 1 Offset(0,59)
        ER07 A 1 Offset(0,55)
        ER07 A 1 Offset(0,52)
        ER07 A 2 Offset(0,49)
        ER07 A 2 Offset(0,46)
        ER07 A 2 Offset(0,44)
        ER07 A 2 Offset(0,40)
        ER07 A 2 Offset(0,38)
        ER07 A 2 Offset(0,36)
        ER07 A 2 Offset(0,34)
        ER07 A 9 Offset(0,32)
        ER07 A 3 A_ReFire
        goto Ready

      Flash:
        ER06 B 2 Bright //A_Light0 // I feel like this was supposed to be a different value. I honestly don't know
        goto LightDone

      IntroTaunt:
        TNT1 A 0 A_GiveInventory("EleenaIntroTaunt")
        goto ReadyStart
    }
}

actor SamsaraEradicatorSmokeBombPrimaryAttackHandler : Trigger
{
    States
    {
      // Ammo checking/taking stuff
      Pickup:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"PickupAttack")
        TNT1 A 0 A_JumpIfInventory("Cell",6,1)
        stop
        TNT1 A 0 A_TakeInventory("Cell",6)
        goto PickupAttack

      // Attack stuff
      PickupAttack:
        TNT1 A 0 A_PlaySound("GrenadeB/FireB",CHAN_WEAPON)
        TNT1 A 0 A_JumpIfInventory("SPModeOn",1,"PickupAttackCoop")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"PickupAttackCoop")
      PickupAttackDM:
        TNT1 A 0 A_FireCustomMissile("EradSmokeBomb",0,false,0,0,0,6) //+range
        stop

      PickupAttackCoop:
        TNT1 A 0 A_FireCustomMissile("EradSmokeBombCoop",0,false,0,0,0,6) //+range
        stop
    }
}

actor SamsaraEradicatorSmokeBombSecondaryAttackHandler : Trigger
{
    States
    {
      // Ammo checking/taking stuff
      Pickup:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"PickupAttack")
        TNT1 A 0 A_JumpIfInventory("Cell",12,1)
        stop
        TNT1 A 0 A_TakeInventory("Cell",12)
        goto PickupAttack

      // Attack stuff
      PickupAttack:
        TNT1 A 0 A_PlaySound("GrenadeB/FireB",CHAN_WEAPON)
        TNT1 A 0 A_JumpIfInventory("SPModeOn",1,"PickupAttackCoop")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"PickupAttackCoop")
      PickupAttackDM:
        TNT1 A 0 A_FireCustomMissile("EradSmokeBomb2",0,false,0,0,0,6)
        stop

      PickupAttackCoop:
        TNT1 A 0 A_FireCustomMissile("EradSmokeBomb2Coop",0,false,0,0,0,6)
        stop
    }
}

