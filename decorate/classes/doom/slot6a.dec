		TNT1 A 0 A_StopSound(CHAN_6)
		TNT1 A 0 A_TakeInventory("SamsaraDoom64PlasmaRifleSoundActive")
		TNT1 A 0 A_TakeInventory("SamsaraDoomguyStrPlasmaRifleReadySoundCheck")
		goto FireStrStart

	FlashStr:
		TNT1 A 1 A_Light1
		TNT1 A 1 A_Light2
