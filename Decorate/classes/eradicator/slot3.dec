//Eleena's weapon

actor "Death Bomb" : SamsaraEradicatorWeapon
{
    Inventory.PickupMessage "Death Bomb"
    Weapon.SlotNumber 3
    Weapon.SelectionOrder 1400
    Weapon.AmmoType1 "Shell"
    Weapon.AmmoType2 "Shell"
    //Weapon.AmmoGive 12
    Weapon.AmmoUse1 2
    Weapon.AmmoUse2 1
    Obituary "%k threw a death ball at %o."
    Tag "Death Bomb"
    States
    {
      Spawn:
        ER06 C -1
        stop

      Ready:
        TNT1 A 0 A_JumpIfInventory("EleenaReady",1,"IntroTaunt")
      ReadyStart:
        TNT1 A 0 A_JumpIfInventory("PowerEradEnWP",1,3)
        TNT1 A 0 A_JumpIfInventory("SamsaraHasPermaWeaponLevel2",1,2)
        ER06 A 1 A_WeaponReady(WRF_NOSECONDARY)
        goto Ready
        ER06 A 1 A_WeaponReady
        goto Ready

      Deselect:
        TNT1 A 0 A_JumpIfHealthLower(1,"DeselectInstant")
        TNT1 A 0 A_PlaySound("Erad/wepswitch")
      DeselectLoop:
        TNT1 A 0 A_Lower
        ER06 A 1 A_Lower
        loop

      Select:
        TNT1 A 0 A_Raise
        ER06 A 1 A_Raise
        loop

      Fire:
        TNT1 A 0 A_GunFlash
        ER06 A 2 Bright A_GiveInventory("SamsaraEradicatorDeathBombPrimaryAttackHandler")
        ER06 A 1 Offset(0,39)
        ER06 A 1 Offset(0,45)
        ER06 A 1 Offset(0,59)
        ER06 A 1 Offset(0,55)
        ER06 A 1 Offset(0,52)
        ER06 A 2 Offset(0,49)
        ER06 A 2 Offset(0,46)
        ER06 A 2 Offset(0,44)
        ER06 A 2 Offset(0,40)
        ER06 A 2 Offset(0,38)
        ER06 A 2 Offset(0,36)
        ER06 A 2 Offset(0,34)
        ER06 A 9 Offset(0,32)
        ER06 A 3 A_ReFire
        goto Ready

      AltFire:
        TNT1 A 0 A_GunFlash
        ER06 A 2 Bright A_GiveInventory("SamsaraEradicatorDeathBombSecondaryAttackHandler")
        ER06 A 1 Offset(0,39)
        ER06 A 1 Offset(0,45)
        ER06 A 1 Offset(0,59)
        ER06 A 1 Offset(0,55)
        ER06 A 1 Offset(0,52)
        ER06 A 2 Offset(0,49)
        ER06 A 2 Offset(0,46)
        ER06 A 2 Offset(0,44)
        ER06 A 2 Offset(0,40)
        ER06 A 2 Offset(0,38)
        ER06 A 2 Offset(0,36)
        ER06 A 2 Offset(0,34)
        ER06 A 9 Offset(0,32)
        ER06 A 1 A_ReFire
        goto Ready

      Flash:
        ER06 B 2 Bright A_Light1
        goto LightDone

      IntroTaunt:
        TNT1 A 0 A_GiveInventory("EleenaIntroTaunt")
        goto ReadyStart
    }
}

actor SamsaraEradicatorDeathBombPrimaryAttackHandler : Trigger
{
    States
    {
      // Ammo checking/taking stuff
      Pickup:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"PickupAttack")
        TNT1 A 0 A_JumpIfInventory("Shell",2,1)
        stop
        TNT1 A 0 A_TakeInventory("Shell",2)
        goto PickupAttack

      // Attack stuff
      PickupAttack:
        TNT1 A 0 A_PlaySound("GrenadeA/FireA",CHAN_WEAPON)
        TNT1 A 0 A_JumpIfInventory("SPModeOn",1,"PickupAttackCoop")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"PickupAttackCoop")
      PickupAttackDM:
	    TNT1 A 0 A_FireCustomMissile("EradDeathBomb",0,false,0,0,0,2)
        stop

      PickupAttackCoop:
        TNT1 A 0 A_FireCustomMissile("EradDeathBombCoop",0,false,0,0,0,2)
        stop
    }
}

actor SamsaraEradicatorDeathBombSecondaryAttackHandler : Trigger
{
    States
    {
      // Ammo checking/taking stuff
      Pickup:
