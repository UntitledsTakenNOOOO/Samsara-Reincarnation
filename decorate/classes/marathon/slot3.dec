actor SamsaraMarathonFusionShotWater2 : SamsaraMarathonFusionSuper
{
    Radius 8
    Height 8
    Speed 0
    Damage 0
    Decal ""
    +DONTBLAST
    +DONTSPLASH
    +FORCERADIUSDMG
    +NODAMAGETHRUST
    +NOTIMEFREEZE
    +NOTONAUTOMAP
    +NOTRIGGER
    +SKYEXPLODE
    States
    {
      Spawn:
        TNT1 A 1 NoDelay A_Countdown
        loop

      Death:
        TNT1 A 0 A_JumpIf(CallACS("SamsaraDecorate", 47), "DeathFullRadius")
        TNT1 A 0 A_Explode(25,128,0)
        TNT1 A 1 A_Explode(random(80,100),128)
        stop

      DeathFullRadius:
        TNT1 A 0 A_Explode(25,128,0,false,128)
        TNT1 A 1 A_Explode(random(80,100),128,XF_HURTSOURCE,false,128)
        stop
    }
}

