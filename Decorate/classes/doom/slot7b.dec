actor Doom64UnmakerPuff
{
    DamageType "DoomDamageType"
    Scale 0.75
    Decal "BulletChip"
    Obituary "%k \cperased\c- %o \cpwith the Unmaker.\c-"
    +BLOODLESSIMPACT
    +NOBLOCKMAP
    +NOGRAVITY
    +PUFFONACTORS
    +RANDOMIZE
    States
    {
      Spawn:
        64UL CD 2 Bright Light("UNMAKERSHOT_X") A_FadeOut(0.1)
        loop
    }
}

