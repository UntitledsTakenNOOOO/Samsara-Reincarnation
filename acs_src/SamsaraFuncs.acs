	SetAmmoCapacity("FBMissiles",(maxRocket*hasBackPack)/2);
	SetAmmoCapacity("FWMissiles",(maxCell*hasBackPack)/30);
	SetAmmoCapacity("DMissiles",(maxCell*hasBackPack)/5);
	SetAmmoCapacity("BMissiles",(maxCell)/30);
	SetAmmoCapacity("DSEnergy",(maxCell)/30);
	
	//Strife Ammo
	SetAmmoCapacity("StrifePoisonAmmo",(maxShell*hasBackPack)/2);
	SetAmmoCapacity("WhitePhosGrenade",(maxRocket*hasBackPack)/5);
	SetAmmoCapacity("StrifeGasGrenadeAmmo",(maxRocket*hasBackPack)/5);
		
	//Caleb Ammo
	SetAmmoCapacity("SprayCanAmmo",((maxCell*hasBackPack)/48)*48);
	
	//Disruptor Ammo
	SetAmmoCapacity("DisruptorHiFreq",((maxClip*hasBackPack)/4)*3);
