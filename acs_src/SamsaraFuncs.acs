function str GetBloodStateModifier(str state, int bloodSize)
{
	switch (bloodSize)
	{
		case BLOOD_MEDIUM:
			return StrParam(s:state, s:"Medium");
		case BLOOD_SMALL:
			return StrParam(s:state, s:"Small");
		case BLOOD_SPRAY:
			return StrParam(s:state, s:"Spray");
	}

	return state;
}